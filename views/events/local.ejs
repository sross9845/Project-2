<h1 class='center'><u>Here are the local events people in our commmunity have posted.</u></h1>
<h2 class='center'>Click each event to find out more!</h2>
<h2 class='center'><a href='/events/local/new'>Create An Event!</a></h2>
<hr>
<% events.forEach(function(event){%>
    <h2><a href='/events/local/<%=event.id%>'><%= event.name %></a></h2>
    <hr>
    <p>City: <%=event.city%></p>
    <p>Venue: <%=event.venue%></p>
    <p>Date: <%=event.date%></p>
    <p>Start Time: <%=event.startTime%></p>
    <p>End Time: <%=event.endTime%></p>
    <br>
    <form method="POST" action="/events/saved">
        <input hidden type="text" name="name" value="<%= event.name %>">
        <input hidden type="text" name="date" value="<%= event.date %>">
        <input hidden type="text" name="startTime" value="<%= event.startTime %>">
        <input hidden type="text" name="venue" value="<%= event.venue %>">
        
        <button type="submit">Add to Saved Events</button>
    </form>
    <br>
    <hr>
<%})%>
